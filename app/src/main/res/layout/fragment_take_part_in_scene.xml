<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f4"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lable_1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_normol_round_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="#我在现场#"
            android:textColor="@color/vm_black_87"/>

        <TextView
            android:id="@+id/tv_lable_2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_normol_round_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="#戏剧#"
            android:textColor="@color/vm_black_87"/>

        <TextView
            android:id="@+id/tv_lable_3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_normol_round_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="#音乐会#"
            android:textColor="@color/vm_black_87"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_comment"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入文字"
        android:paddingTop="2dp"
        android:textColor="@color/vm_black_87"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_take_part_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_normol_blue"
        android:text="提  交"
        android:textColor="@color/white"
        android:textSize="20dp"/>
</LinearLayout>