<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_test"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/img_community"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/club_details"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@drawable/authentication"/>
                <TextView
                    android:id="@+id/name_authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="实名认证"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@drawable/authentication"/>
                <TextView
                    android:id="@+id/credentials_authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="资质认证"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_corner_gray"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/flower_save"/>
            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="95"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_club"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_test"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/club_details"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_test"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_clubName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100dp"
                android:singleLine="true"
                android:text="上海芭蕾舞团"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/tv_Label_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_normol_1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:text="芭蕾舞"
                    android:textColor="@color/vm_black_87"/>

                <TextView
                    android:id="@+id/tv_Label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_normol_1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:text="上海芭蕾舞"
                    android:textColor="@color/vm_black_87"/>

                <TextView
                    android:id="@+id/tv_Label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_normol_1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:text="上海芭蕾舞"
                    android:textColor="@color/vm_black_87"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textColor="#757575"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="上海芭蕾舞团成立于1979年，前身为大型芭蕾舞剧《白毛女》剧组"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#509c9c9c"/>
    </LinearLayout>

</RelativeLayout>